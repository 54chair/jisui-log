<section class="user-sign-in">
  <div class="user-sign-in-item">
    <h2><%= t('.sign_up') %></h2>
  </div>
  <div class="user-sign-up-form">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mb-3">
            <%= f.label :avatar, { class: "form-label"} %><br />
            <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :username, { class: "form-label"} %><br />
            <%= f.text_field :username, { class: "form-control", placeholder: "名前"} %>
          </div>
          <div class="mb-3">
            <%= f.label :email, { class: "form-label"} %><br />
            <%= f.email_field :email, { class: "form-control", placeholder: "Eメール"} %>
          </div>
          <div class="mb-3">
            <%= f.label :password, { class: "form-label"} %>
            <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %><br />
            <%= f.password_field :password, { class: "form-control", placeholder: "パスワード"} %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, { class: "form-label"} %><br />
            <%= f.password_field :password_confirmation, { class: "form-control", placeholder: "パスワード確認用"}  %>
          </div>
          <div class="mb-3">
            <%= f.submit t('.sign_up'), class: "btn btn-warning" %>
          </div>
        <% end %>
        <%= link_to 'ログインはこちらから', new_user_session_path %>
      </div>
    </div>
  </div>
</section>