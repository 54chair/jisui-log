<section class="post-new">
  <div class="post-new-item">
    <h2>新規投稿</h2>
  </div>
  <div class="post-new-form">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6">
        <%= form_with(model: @post, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :title, "料理名", { class: "form-label"} %>
            <%= f.text_field :title, { class: "form-control", placeholder: "料理名" } %>
          </div>
          <div class="mb-3">
            <%= f.label :content, "感想", { class: "form-label"}  %>
            <%= f.text_area :content, { class: "form-control", placeholder: "感想" } %>
          </div>
          <div class="mb-4">
            <%= f.label :image, "料理の画像", { class: "form-label"} %></br>
            <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "form-control" %>
          </div>
          <div class="mb-4 d-grid gap-2 mx-auto text-center">
            <%= f.submit "投稿", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</sedtion>