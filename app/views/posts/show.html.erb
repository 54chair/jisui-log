<%= image_tag @post.display_image if @post.image.attached? %>
<%= link_to @post.user.username, user_path(@post.user_id) %>
<%= @post.title %>
<%= @post.content %>
<% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path %>
  <%= link_to "削除", post_path , {method: "delete"} %>
<% end %>
<%= link_to "戻る", :back %>