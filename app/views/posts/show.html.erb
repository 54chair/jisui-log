<%= image_tag @post.display_image if @post.image.attached? %>
<%= link_to @post.user.username, user_path(@post.user_id) %>
<%= @post.title %>
<%= @post.content %>

<% if @post.liked_by?(current_user) %>
 <%= link_to post_like_path(@post.id), class: "like-link", method: :delete do %>
  <i class="fa-solid fa-heart like-btn"></i>
  <%= @post.likes.count %>
 <% end %>
<% else %>
 <%= link_to post_likes_path(@post.id), class: "like-link",  method: :post do %>
  <i class="fa-regular fa-heart unlike-btn"></i>
  <%= @post.likes.count %>
 <% end %>
<% end %>

<% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path %>
  <%= link_to "削除", post_path , {method: "delete"} %>
<% end %>