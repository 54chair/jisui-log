<section class="users-follower-list">
  <div class="user-follower-list-item">
    <h2>フォロワー一覧</h2>
  </div>
  <div class="user-follower-list-group">
    <div class="row d-flex justify-content-center">
      <div class ="col-md-6">
        <ul class="list-group">
          <% @users.each do |user| %>
            <li class="list-group-item">
              <%= link_to user_path(user), {class: "link"} do %>
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar.variant(gravity: :center, resize:"40x40^", crop:"40x40+0+0").processed, {class: "avatar"} %>
                <% else %>
                  <%= image_tag("default_user.jpg", size: "40x40", class: "avatar") %>
                <% end %>
                <%= user.username %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <%= paginate @users, theme: 'bootstrap-5' %>
  </div>
</section>