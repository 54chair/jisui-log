<p>ユーザーがいいねした投稿一覧</p>
<% @like_posts.each do |post| %>
  <%= image_tag post.display_image if post.image.attached? %>
  <%= post.user.username %>
  <%= post.title %>
  <% if post.liked_by?(current_user) %>
    <i class="fa-solid fa-heart like-btn"></i>
  <% else %>
    <i class="fa-regular fa-heart unlike-btn"></i>
  <% end %>
  <%= post.likes.count %>
  <%= link_to '詳細', post_path(post) %>
<% end %>