<%= @user.username %>

<%= render 'shared/stats' %>
<%= render 'follow_form'%>

<%= link_to 'このユーザーがいいねした投稿を見る', likes_user_path(@user) %>

<% if @user == current_user %>
  <%= link_to 'プロフィール変更', edit_user_registration_path %>
<% end %>

<% @posts.each do |post| %>
  <%= image_tag post.display_image if post.image.attached? %>
  <%= post.user.username %>
  <%= post.title %>
  <% if post.liked_by?(current_user) %>
    <i class="fas fa-heart like-btn"></i>
  <% else %>
    <i class="far fa-heart unlike-btn"></i>
  <% end %>
  <%= post.likes.count %>
  <%= link_to '詳細', post_path(post) %>
<% end %>